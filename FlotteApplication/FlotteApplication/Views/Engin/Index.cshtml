@namespace FlotteApplication.Models
@model List<Engin>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    Layout = "_AdminLayout";
}


<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1 class="display-4">Liste des Engins</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Immatriculation</th>
                    <th scope="col">marque</th>
                    <th scope="col">couleur</th>
                    <th scope="col">Categorie</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.enginId</td>
                        <td>@p.immatriculation</td>
                        <td>@p.marque</td>
                        <td>@p.couleur</td>
                        <td>@p.categorie</td>
                        

                        <td>
                            
                            <a href="@Url.Action("Edit", "Engin", new { id = p.enginId })" class="btn btn-warning">Modifier</a>

                            <a href="@Url.Action("Delete", new { id = p.enginId })" class="btn btn-danger">Supprimer</a>
                            
                                
                            
                        </td>
                    </tr>
                }
            </tbody> 
        </table>
        
    </div>
    <div>
        <a href="Engin/Add" class="btn btn-warning">Ajouter</a>
    </div>
</body>
</html>

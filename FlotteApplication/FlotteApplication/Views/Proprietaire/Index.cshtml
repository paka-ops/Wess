@namespace FlotteApplication.Models
@model List<Proprietaire>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    Layout = "_AdminLayout";
}



@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Liste des Propriétaires</title>
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Liste des Propriétaires</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Type</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.proprietaireId</td>
                        <td>@p.name</td>
                        <td>@p.type</td>
                        <td>
                            <button type="button" class="btn btn-warning edit-button" data-id="@p.proprietaireId">Modifier</button>
                            <form asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@p.proprietaireId" />
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Create" class="btn btn-primary">+ Nouveau</a>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="editProprietaireModal" tabindex="-1" aria-labelledby="editProprietaireModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editProprietaireModalLabel">Modifier le Propriétaire</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="modalFormContent">
                        <!-- Le formulaire de modification sera chargé ici -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.edit-button').on('click', function () {
                var proprietaireId = $(this).data('id');
                $('#modalFormContent').load('/Proprietaire/Edit/' + proprietaireId, function () {
                    var modal = new bootstrap.Modal(document.getElementById('editProprietaireModal'));
                    modal.show();
                });
            });
        });
    </script>
</body>
</html>

